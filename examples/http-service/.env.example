# NotifyHub HTTP Service 环境配置示例
# 复制此文件为 .env 并填入实际配置

# ======================
# 服务配置
# ======================
PORT=8080
ENV=development

# ======================
# Feishu 飞书配置
# ======================
NOTIFYHUB_FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-url
NOTIFYHUB_FEISHU_SECRET=your-feishu-secret
NOTIFYHUB_FEISHU_TIMEOUT=30s

# ======================
# Email 邮箱配置
# ======================
NOTIFYHUB_SMTP_HOST=smtp.gmail.com
NOTIFYHUB_SMTP_PORT=587
NOTIFYHUB_SMTP_USERNAME=your-email@gmail.com
NOTIFYHUB_SMTP_PASSWORD=your-app-password
NOTIFYHUB_SMTP_FROM=your-email@gmail.com
NOTIFYHUB_SMTP_USE_TLS=true
NOTIFYHUB_SMTP_TIMEOUT=30s

# ======================
# 队列配置
# ======================
NOTIFYHUB_QUEUE_TYPE=memory
NOTIFYHUB_QUEUE_SIZE=1000
NOTIFYHUB_QUEUE_WORKERS=4

# ======================
# 遥测配置（可选）
# ======================
NOTIFYHUB_TELEMETRY_ENABLED=true
NOTIFYHUB_TELEMETRY_SERVICE_NAME=notifyhub-http-service
NOTIFYHUB_TELEMETRY_VERSION=1.2.0
NOTIFYHUB_TELEMETRY_ENVIRONMENT=development
NOTIFYHUB_TELEMETRY_ENDPOINT=http://localhost:4317

# ======================
# 开发模式（自动启用 Mock 通知器）
# ======================
NOTIFYHUB_ENABLE_MOCK=true