# NotifyHub HTTP Service Environment Variables

# Server Configuration
PORT=8080
API_KEY=your-secret-api-key-here
LOG_LEVEL=info
RATE_LIMIT_PER_MINUTE=60
MAX_REQUEST_SIZE=1048576

# NotifyHub Feishu Configuration
NOTIFYHUB_FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-url
NOTIFYHUB_FEISHU_SECRET=your-feishu-secret

# NotifyHub Email Configuration
NOTIFYHUB_SMTP_HOST=smtp.gmail.com
NOTIFYHUB_SMTP_PORT=587
NOTIFYHUB_SMTP_USERNAME=your-email@gmail.com
NOTIFYHUB_SMTP_PASSWORD=your-app-password
NOTIFYHUB_SMTP_FROM=your-email@gmail.com

# NotifyHub Queue Configuration
NOTIFYHUB_QUEUE_WORKERS=4
NOTIFYHUB_QUEUE_BUFFER_SIZE=1000
NOTIFYHUB_RETRY_MAX=3

# NotifyHub Telemetry Configuration (Optional)
NOTIFYHUB_TELEMETRY_ENABLED=false
NOTIFYHUB_TELEMETRY_SERVICE_NAME=notifyhub-http-service
NOTIFYHUB_TELEMETRY_SERVICE_VERSION=1.0.0
NOTIFYHUB_TELEMETRY_ENVIRONMENT=development
NOTIFYHUB_TELEMETRY_TRACING_ENABLED=true
NOTIFYHUB_TELEMETRY_METRICS_ENABLED=true
NOTIFYHUB_TELEMETRY_OTLP_ENDPOINT=http://localhost:4317