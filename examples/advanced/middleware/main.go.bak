// Utility functions
func generateCorrelationID() string {
	return fmt.Sprintf("corr_%d", time.Now().UnixNano())
}

var circuitOpen = false
var failureCount = 0

func isCircuitOpen() bool {
	return circuitOpen
}

func recordFailure() {
	failureCount++
	if failureCount >= 3 {
		circuitOpen = true
	}
}

func recordSuccess() {
	failureCount = 0
	circuitOpen = false
}