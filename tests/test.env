# NotifyHub Test Configuration

# 测试环境配置
TEST_ENV=development

# 测试超时设置
TEST_TIMEOUT_UNIT=10m
TEST_TIMEOUT_INTEGRATION=15m
TEST_TIMEOUT_PERFORMANCE=30m

# 测试并发设置
TEST_PARALLEL=true
TEST_PARALLEL_WORKERS=4

# 基准测试配置
BENCHMARK_TIME=10s
BENCHMARK_COUNT=3
BENCHMARK_MEMORY=true

# 覆盖率配置
COVERAGE_THRESHOLD=70
COVERAGE_FORMAT=html

# Mock配置
MOCK_DELAY_MS=0
MOCK_ERROR_RATE=0

# 性能测试配置
PERF_NUM_MESSAGES=10000
PERF_NUM_GOROUTINES=100
PERF_QUEUE_SIZE=5000
PERF_WORKERS=16

# 压力测试配置
STRESS_DURATION=60s
STRESS_RATE=1000
STRESS_BURST_SIZE=100

# 日志配置
TEST_LOG_LEVEL=error
TEST_LOG_FORMAT=text

# 测试数据配置
TEST_DATA_DIR=./tests/fixtures
TEST_TEMP_DIR=/tmp/notifyhub-tests

# 测试平台配置
TEST_PLATFORMS=test,mock

# 外部服务配置（如需要）
# REDIS_TEST_ADDR=localhost:6379
# REDIS_TEST_DB=15

# 测试报告配置
REPORT_DIR=./tests/reports
REPORT_FORMAT=json,html

# CI/CD配置
CI_MODE=false
CI_FAIL_FAST=true

# 测试标签
TEST_TAGS=unit,integration,performance

# 跳过的测试
SKIP_TESTS=""

# 调试配置
DEBUG_MODE=false
VERBOSE=false